# Environment Configuration for Memory-Enhanced Conveyancing System

# Copy this file to .env and fill in your actual values

# =============================================================================
# MEMORY SYSTEM CONFIGURATION
# =============================================================================

# Mem0 Platform Configuration
MEM0_API_KEY=your_mem0_api_key_here
CONVEYANCING_PROJECT_ID=conveyancing_automation

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================

# OpenAI Configuration (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_openai_org_id_here

# Anthropic Configuration (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Local Model Configuration (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODELS=llama3-8b-instruct,qwen2.5-3b-instruct,mistral-7b-instruct

# Model Routing Preferences
MODEL_ROUTING_MODE=local-preferred
COST_BUDGET_PER_CASE=10.00
MAX_TOKENS_PER_REQUEST=4000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
POSTGRES_PASSWORD=your_secure_postgres_password
DATABASE_URL=postgresql://conveyancing:your_secure_postgres_password@localhost:5432/conveyancing
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=conveyancing
POSTGRES_USER=conveyancing

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Settings
APP_NAME=Conveyancing Automation System
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security Settings
SECRET_KEY=your_very_secure_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Monitoring Settings
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=your_grafana_password_here

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# =============================================================================
# CONVEYANCING DOMAIN CONFIGURATION
# =============================================================================

# Default Jurisdictions
DEFAULT_JURISDICTION=texas
SUPPORTED_JURISDICTIONS=texas,california,new_york,florida,illinois

# Document Processing
DOCUMENT_UPLOAD_MAX_SIZE=50MB
DOCUMENT_SUPPORTED_FORMATS=pdf,doc,docx,txt,rtf
DOCUMENT_PROCESSING_TIMEOUT=300

# Compliance Settings
COMPLIANCE_CHECK_ENABLED=true
COMPLIANCE_AUTO_APPROVE=false
COMPLIANCE_RETENTION_YEARS=7

# =============================================================================
# MEMORY ENHANCEMENT CONFIGURATION
# =============================================================================

# Memory Settings
MEMORY_CACHE_SIZE=1000
MEMORY_RETENTION_DAYS=365
MEMORY_AUTO_CLEANUP=true
MEMORY_COMPRESSION_ENABLED=true

# Memory Categories
MEMORY_LEGAL_KNOWLEDGE_ENABLED=true
MEMORY_DOCUMENT_TEMPLATES_ENABLED=true
MEMORY_PROCESS_WORKFLOWS_ENABLED=true
MEMORY_STAKEHOLDER_DATA_ENABLED=true
MEMORY_RISK_FACTORS_ENABLED=true
MEMORY_COMPLIANCE_RULES_ENABLED=true
MEMORY_MARKET_DATA_ENABLED=true

# Memory Performance
MEMORY_BATCH_SIZE=50
MEMORY_SEARCH_TIMEOUT=30
MEMORY_INDEX_REFRESH_INTERVAL=3600

# =============================================================================
# CELERY CONFIGURATION (Background Tasks)
# =============================================================================

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Worker Configuration
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# Beat Configuration (Scheduled Tasks)
CELERY_BEAT_SCHEDULE_FILENAME=celerybeat-schedule
CELERY_BEAT_SYNC_EVERY=0

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Settings
DEV_AUTO_RELOAD=true
DEV_DEBUG_SQL=false
DEV_PROFILING_ENABLED=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://conveyancing:test_password@localhost:5432/conveyancing_test
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production Settings
PRODUCTION_SSL_ENABLED=true
PRODUCTION_SSL_CERT_PATH=/etc/ssl/certs/app.crt
PRODUCTION_SSL_KEY_PATH=/etc/ssl/private/app.key

# Performance Settings
PRODUCTION_WORKERS=8
PRODUCTION_MAX_REQUESTS=1000
PRODUCTION_KEEPALIVE=2

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================

# External Services
TITLE_SEARCH_API_URL=https://api.titlesearch.com/v1
TITLE_SEARCH_API_KEY=your_title_search_api_key
ESCROW_SERVICE_API_URL=https://api.escrow.com/v1
ESCROW_SERVICE_API_KEY=your_escrow_service_api_key

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
FEATURE_MEMORY_ENHANCEMENT=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_COLLABORATION=true
FEATURE_AUTOMATIC_COMPLIANCE=true
FEATURE_AI_DOCUMENT_ANALYSIS=true
FEATURE_PREDICTIVE_ANALYTICS=false

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Google Services
GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account.json
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Microsoft Services
MICROSOFT_TENANT_ID=your-tenant-id
MICROSOFT_CLIENT_ID=your-client-id
MICROSOFT_CLIENT_SECRET=your-client-secret

# =============================================================================
# CUSTOMIZATION
# =============================================================================

# Custom Settings
CUSTOM_LOGO_PATH=./assets/logo.png
CUSTOM_COMPANY_NAME=Your Company Name
CUSTOM_SUPPORT_EMAIL=support@yourcompany.com
CUSTOM_SUPPORT_PHONE=+1-555-123-4567
