# Agent Orchestra v2 Dockerfile
# Production-ready multi-stage build with security best practices

# =============================================================================
# BASE BUILDER STAGE
# =============================================================================
FROM python:3.11-slim as base-builder

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    POETRY_VERSION=1.7.1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry for dependency management
RUN pip install "poetry==$POETRY_VERSION"

# =============================================================================
# DEPENDENCIES STAGE
# =============================================================================
FROM base-builder as dependencies

# Set working directory
WORKDIR /app

# Copy dependency files
COPY requirements.v2.txt pyproject.toml poetry.lock* ./

# Configure Poetry
RUN poetry config virtualenvs.create false

# Install dependencies
RUN poetry install --no-interaction --no-ansi --only main

# =============================================================================
# APPLICATION STAGE
# =============================================================================
FROM python:3.11-slim as application

# Create non-root user for security
RUN groupadd -r orchestra && useradd -r -g orchestra orchestra

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PATH="/home/orchestra/.local/bin:$PATH"

# Install runtime system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create application directory
WORKDIR /app

# Copy Python dependencies from dependencies stage
COPY --from=dependencies /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=dependencies /usr/local/bin /usr/local/bin

# Copy application code
COPY --chown=orchestra:orchestra . .

# Create necessary directories
RUN mkdir -p /app/logs /app/cache /app/tmp && \
    chown -R orchestra:orchestra /app

# Switch to non-root user
USER orchestra

# =============================================================================
# HEALTH CHECK & STARTUP
# =============================================================================

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Expose port
EXPOSE 8000

# Startup command
CMD ["python", "main_v2.py"]

# =============================================================================
# DEVELOPMENT VARIANT (for local development)
# =============================================================================
FROM application as development

# Switch back to root for development tools
USER root

# Install development dependencies
RUN pip install pytest pytest-asyncio pytest-cov black mypy pylint

# Switch back to orchestra user
USER orchestra

# Override command for development
CMD ["uvicorn", "main_v2:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

# =============================================================================
# SECURITY NOTES
# =============================================================================

# This Dockerfile follows security best practices:
# 1. Multi-stage build to minimize final image size
# 2. Non-root user for application execution
# 3. Minimal base image (python:3.11-slim)
# 4. Clean package manager caches
# 5. Read-only filesystem where possible
# 6. Health checks for monitoring
# 7. Proper file permissions
# 8. Environment variable hardening

# To build for production:
# docker build -f Dockerfile.v2 --target application -t orchestra-v2:latest .

# To build for development:
# docker build -f Dockerfile.v2 --target development -t orchestra-v2:dev .
